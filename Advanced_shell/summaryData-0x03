#!/bin/bash
# Script: summaryData-0x03
# Purpose: Generate a CSV report with name, height, and weight of multiple Pokémon
#          and calculate the average height and weight.

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Extract data from each JSON file and append to CSV
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")
    
    # Convert decimeters → meters and hectograms → kilograms
    height_m=$(awk -v h="$height" 'BEGIN { printf "%.1f", h / 10 }')
    weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.1f", w / 10 }')
    
    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo

# Display the CSV file
cat "$OUTPUT_FILE"
echo

# Calculate averages using awk (skipping header)
awk -F',' 'NR>1 { total_h+=$2; total_w+=$3; count++ }
    END {
        if (count > 0) {
            printf "\nAverage Height: %.2f m\n", total_h / count
            printf "Average Weight: %.2f kg\n", total_w / count
        }
    }' "$OUTPUT_FILE"
