#!/bin/bash
# Script: apiAutomation-0x00
# Purpose: Get Pikachu data from the PokÃ©mon API and save to data.json
# If request fails, log the error to errors.txt

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.tmp

# Check if the status code is 200 (success)
STATUS_CODE=$(cat status_code.tmp)
rm status_code.tmp

if [ "$STATUS_CODE" -ne 200 ]; then
    echo "Error: Failed to fetch data from $API_URL (Status: $STATUS_CODE)" >> "$ERROR_FILE"
    exit 1
fi

echo "Data successfully saved to $OUTPUT_FILE"
